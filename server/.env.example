# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=karaoke_db
DB_USER=root
DB_PASS=
DB_SYNC_ALTER=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Upload Configuration
UPLOAD_MAX_SIZE=500
ALLOWED_VIDEO_FORMATS=mp4,mkv,webm,avi
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp
UPLOAD_THUMBNAIL_MAX_SIZE=2
UPLOAD_PATH=./uploads

# Media Processing (FFmpeg)
# Optional: override ffmpeg binary path (default uses ffmpeg-static)
# FFMPEG_PATH=/usr/bin/ffmpeg
THUMBNAIL_TIMEMARK=00:00:05
THUMBNAIL_FALLBACK_TIMEMARK=00:00:01

# Song Directory untuk Auto-Scan
# Format nama file: JUDUL-LAGU#ARTIS#NEGARA.mp4
SONGS_DIRECTORY=./uploads/videos

# Frontend URL (untuk CORS)
FRONTEND_URL=http://localhost:5173

# Firebase Admin (Google Login)
# Pilih salah satu metode konfigurasi:
# 1) Service account JSON file path (disarankan)
FIREBASE_SERVICE_ACCOUNT_PATH=
# 2) Atau via env (contoh untuk Docker/CI) - private key gunakan literal "\\n"
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
